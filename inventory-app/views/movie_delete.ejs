<%- include('layout') %>

<h1><%= title %>: <%= movie.title %></h1>
<p><%= movie.summary %></p>

<% if (movie.length) { %>
<p>
	<strong
		>Delete the following movie instances before attempting to delete this
		movie.</strong
	>
</p>
<div style="margin-left: 20px; margin-top: 20px">
	<h4>Movie Instances</h4>
	<dl>
		<% movie_instances.forEach(function(instance) { %>
		<dt>Instance <%= instance._id %></dt>
		<dd>Status: <%= instance.status %></dd>
		<dd>
			Due back: <%= instance.due_back ? instance.due_back.toDateString() : 'N/A'
			%>
		</dd>
		<% }); %>
	</dl>
</div>
<% } else { %>
<p>Do you really want to delete this Movie?</p>
<form method="POST">
	<div class="form-group">
		<input
			id="movieid"
			class="form-control"
			type="hidden"
			name="movieid"
			value="<%= movie._id %>"
		/>
	</div>
	<button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>
