<%- include('layout') %>

<h1><%= title %>: <%= director.name %></h1>
<p><%= director.lifespan %></p>

<% if (director_movies.length) { %>
<p>
	<strong
		>Delete the following movies before attempting to delete this
		director.</strong
	>
</p>
<div style="margin-left: 20px; margin-top: 20px">
	<h4>Movies</h4>
	<dl>
		<% director_movies.forEach(function(movie) { %>
		<dt>
			<a href="<%= movie.url %>"><%= movie.title %></a>
		</dt>
		<dd><%= movie.summary %></dd>
		<% }); %>
	</dl>
</div>
<% } else { %>
<p>Do you really want to delete this director?</p>
<form method="POST">
	<div class="form-group">
		<input
			id="directorid"
			class="form-control"
			type="hidden"
			name="directorid"
			value="<%= director._id %>"
		/>
	</div>
	<button class="btn btn-primary" type="submit">Delete</button>
</form>
<% } %>
